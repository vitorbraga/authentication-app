{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "module": "commonjs",
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "noUnusedLocals": true,
      "strictNullChecks": true,
      "target": "es2017"
    },
    "include": [
      "./src/**/**/*"
    ]
  }